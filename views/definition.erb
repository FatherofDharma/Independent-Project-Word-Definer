<h1><%= @definition.name %></h1>
<h2><%= @definition.word.name %></h2>

<form action="/words/<%= @definition.word.id() %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Redefine the word</label>
  <input id="redefine" name="redefine" type="text">

  <button type="submit">Change the Definition</button>
</form>

<form action="/words/<%= @definition.word.id() %>/definitions/<%= @definition.id %>" method="post">
  <input type="hidden" name="_method" value="delete">

  <button type="submit">Delete Definition!</button>
</form>

<a href="/words/<%= @definition.word.id %>">Back to <%= @definition.word.name %></a>

<p><a href="/words">Return to the dictionary!</a></p>
