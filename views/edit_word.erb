<h1>Edit Word: <%= @word.name() %></h1>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename the word</label>
  <input id="name" name="name" type="text" required>

  <button type="submit">Change the Word</button>
</form>

<form action="/words/<%= @word.id() %>" method="post">
  <input type="hidden" name="_method" value="delete">

  <button type="submit">Delete Word!</button>
</form>

<p><a href="/words">Return to the dictionary!</a></p>
